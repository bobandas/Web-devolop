<section>
    <div class="container">

        <a href="/admin/add-products" class="btn btn-info btn-rounded float-right m-3" role="button">Add Products</a>
        <!--Table-->
        <table class="table table-hover table-fixed">

            <!--Table head-->
            <thead>
                <tr>
                    <th>No</th>
                    <th>name</th>
                    <th>description</th>
                    <th>rate</th>
                    <th>Tags</th>
                    <th>Image</th>
                    <th>Action</th>
                </tr>
            </thead>
            <!--Table head-->

            <!--Table body-->
            <tbody>
                {{#each products}}
                <tr>
                    <th scope="row">4</th>
                    <td>{{this.name}}</td>
                    <td>{{this.description}}</td>
                    <td>{{this.rate}}</td>
                    <td>{{this.tags}}</td>
                    <td>
                        <img src="/product-image/{{this._id}}.jpg" alt="" style=" height:6rem">
                    </td>
                    <td>
                        <div>
                            <a class="btn btn-primary  m-2" href="#">Edit</a>
                            <a class="btn btn-danger" href="/delete">Delete</a>
                        </div>
                    </td>
                </tr>
                {{/each}}


            </tbody>
            <!--Table body-->

        </table>
        <!--Table-->
    </div>

</section>